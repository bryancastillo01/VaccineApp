<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VistaPfizer">

    <androidx.cardview.widget.CardView
        android:id="@+id/Contenedor4"
        android:layout_width="413dp"
        android:layout_height="66dp"
        android:backgroundTint="@color/azulC"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="413dp"
            android:layout_height="66dp"
            android:background="#4A78B5"
            android:text="@string/vaccinelabapp"
            android:textAlignment="center"
            android:textColor="#FFD759"
            android:textSize="34sp"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="597dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/Contenedordetexto4"
            android:layout_width="380dp"
            android:layout_height="500dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="496dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textoinformativo4"
                        android:layout_width="307dp"
                        android:layout_height="241dp"
                        android:text="Descripción: es una vacuna de ARN\n mensajero (ARNm)monocatenario,con caperuza(CAP)en el extremo 5 que codifica la proteína S(espícula) del virus SARS-cov-2 \n Eficiencia:95%\nTipo de vacuna:ARN \nFabricante BioNtech,Fosun Pharma,Pfizer\nEfectos secundarios:dolor de cabeza articular ,muscular ,dolor en la zona de la inyección, cansancio,escalofríos ,fiebre, inflamación, en la zona de la inyección Contraindicaciones :personas con antecedentes de reacción alérgica fuerte a algún componente de la vacuna"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TipoDeVacuna" />

                    <Button
                        android:id="@+id/btnVolver4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/terra"
                        android:text="volver"
                        android:textColor="#212121"
                        app:cornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.309"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textoinformativo4"
                        tools:ignore="TextContrastCheck,TextContrastCheck" />

                    <Button
                        android:id="@+id/btnComprar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/terra"
                        android:text="comprar"
                        android:textColor="#212121"
                        app:cornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.739"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textoinformativo4"
                        tools:ignore="TextContrastCheck,TextContrastCheck" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/TipoDeVacuna"
                        android:layout_width="164dp"
                        android:layout_height="58dp"
                        android:backgroundTint="@color/amarillo"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TIpoVacuna4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vacuna Pfizer"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>