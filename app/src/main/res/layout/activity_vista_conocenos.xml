<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".VistaConocenos">

    <androidx.cardview.widget.CardView
        android:id="@+id/Contenedor1"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:backgroundTint="@color/azulC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="413dp"
            android:layout_height="66dp"
            android:background="#4A78B5"
            android:text="@string/vaccinelabapp"
            android:textAlignment="center"
            android:textColor="#FFD759"
            android:textSize="34sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:background="@color/amarillo"
        android:fontFamily="@font/roboto"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:text="NOSOTROS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Contenedor1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="218dp"
        android:layout_height="117dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/con_cenos" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="329dp"
        android:layout_height="263dp"
        android:fontFamily="@font/roboto"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center|center_horizontal"
        android:text="Somos VaccineLab S.A., un laboratorio especializado en distribución de vacunas contra el COVID 19 a lugares autorizados por el Ministerio de salud. En nuestro catálogo pocrás encontrar todas las vacunas aprobadas por la Organización Mundial de la salud.                                                                    Estamos Ubicados en Bogotá: Laboratorio y oficinas; Cll 93 # 19b- 67 Centro de almacenamiento y logística: Cra 68 # 18-60. Teléfono: 60-1-4656057"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnVolver7"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:background="@color/terra"
        android:backgroundTint="@color/terra"
        android:text="Volver"
        android:textColor="#212121"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>